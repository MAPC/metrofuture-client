<div class="section container">
  <div class="row">
    <h5><%= data.attributes.name %></h5>
  </div>
  <div id="projects-grid" class="row">
    <% if(data.attributes.projects.length >= 1) { %>
    <% _.each(data.attributes.projects, function ( project ) {  %>
    <%= projectCardTemplate(project) %>
    <%  }); %>
    <% } else { %>
    <h5>No projects for <%= data.attributes.name %>.</h5> <br />
    <% }; %>

    <% $('#toggle-images').on('click', function (e) { %>
    <% e.preventDefault(); %>
    <% $('.card-image').hide(); %>
    <% $('i').hide(); %>
    <% $('.card-reveal').removeClass('card-reveal') %>
    <%}); %>
  </div>
