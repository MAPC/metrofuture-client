<div class="col s12 m6 l4">
  <div class="card small">
    <% if (attributes.image) { %>
      <div class="card-image waves-effect waves-block waves-light">
        <a href="#projects/<%= id %>"><img src="<%= MfiaClient.API + attributes.image %>"></a>
      </div>
    <% } %>
    <div class="card-content">
      <% if (attributes.image) { %> 
        <span class="activator card-title grey-text text-darken-4 truncate"><%= attributes.title %> <i class="mdi-navigation-more-vert right activator"></i></span>
      <% } else { %>
        <a href="/#/projects/<%= id %>"><span class="card-title grey-text text-darken-4"><%= attributes.title %> <i class="mdi-navigation-more-vert right activator"></i></span></a>
      <% } %>
      <p class="truncate"><%= attributes.description %></p>
    </div>
    <div class="card-reveal">
      <span class="activator card-title grey-text text-darken-4"><%= attributes.title %> <i class="mdi-navigation-more-vert right"></i></span>
      <a href="/#/projects/<%= id %>">View This Project</a>
      <p><%= attributes.description %></p>
    </div>
  </div>
</div>